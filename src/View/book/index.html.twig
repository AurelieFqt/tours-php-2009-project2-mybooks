
{% extends 'layout.html.twig' %}

{% block content %}
    <main>
        <img src="/assets/images/presentation.jpg" class="presentationImage" alt="image de page d'accueil">
        <div class="containerIndex">
            <h1 class="titleLibrary">Ma bibliothèque</h1><a href="/book/add"><img class="plusLittleImage" src="/assets/images/iconeplus.png"
            alt="image permettant d'accéder au formulaire d'ajout"></a>
        </div>
        <hr class="hrLibrary">
        <form method="GET">
            <input type="search" placeholder="Rechercher..."/>
            <button>rechercher</button>
        </form>
        <div class="myLibrary">
            <ul class="flex-parent">
                    {% for book in books %}
                        <li><a href="/book/show/{{ book.id }}">
                                <p class="indexBookTitle"> {{ book.title }} </p>
                                <p class="indexBookAuthor"> {{ book.author }} </p> 
                                <p class="indexBookLocalisation"> Localisation : {{ book.localization }}
                                    {% if book.hasBeenRead == "Oui" %}
                                    <img src="/assets/images/booklu.png" class="readBook" alt="image indiquant si le livre est lu">
                                    {% else %}
                                    <img src="/assets/images/booknonlu.png" class="readBook" alt="image indiquant si le livre est lu"> </p>
                                    {% endif %}
                                </p>
                        </a></li>
                            {% else %}
                        <li>Aucun book à afficher!</li>
                    {% endfor %}
            </ul>
        </div>
        <div class="buttons">
            <a href="/book/index/{{ previousPage }}" class="previousButton">&lt;&lt; previous</a>
            <a href="/book/index/{{ nextPage }}" class="nextButton">next &gt;&gt;</a>
        </div>
        <div class ="alignPlusImage">
            <a href="/book/add"><img src="/assets/images/iconeplus.png" class="plusImage" 
            alt="image permettant d'accéder au formulaire d'ajout"></a>
        </div>
    </main>

{% endblock %}
